<div id="sourceList-{{name}}">
  <h4>Data within this collection:</h4>
  <ul class="list-group">
    {{#unless sources}}
      <li class="list-group-item">
        This collection does not contain any data.
      </li>
    {{/unless}}
    {{#each sources}}
      <li class="list-group-item source-{{this}}">
        {{this}}
        <span class="pull-right">
          <input class="btn-visibility" data-size="mini" data-source="{{this}}" data-collection="{{../name}}" type="checkbox" checked data-toggle="toggle" data-on="Show" data-off="Hide">
          <button type="button" class="btn btn-deleteSource btn-danger btn-xs" data-source="{{this}}" data-collection="{{../name}}">
            <i class="fa fa-trash"></i>
          </button>
        </span>
      </li>
    {{/each}}
  </ul>
</div>
