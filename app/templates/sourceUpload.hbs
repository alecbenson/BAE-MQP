<!-- Edit collection form !-->
<form class="addSource" id="{{name}}">
  <h5>Upload new data to this collection:</h5>
  <div class="input-group">
    <span class="input-group-addon">
      <!-- Data type select box !-->
      <select class="selectmenu" id="sourcetype" name="uploadType">
        <option value="xml">XML</option>
        <option value="sage">Graph</option>
        <option value="stream">Stream</option>
      </select>
    </span>
    <input type="hidden" name="collectionName" value="{{name}}">
    <!-- Browse file button !-->
    <input type="text" class="form-control" readonly>
    <span class="input-group-btn">
      <span class="btn btn-default btn-file">
        <i class="fa fa-folder"></i>
        <input type="file" name="file">
      </span>
    </span>
    <span class="input-group-btn">
      <span class="btn btn-default btn-upload-data">
        <i class="fa fa-upload"></i>
      </span>
    </span>
  </div>
</form>
