<div class="panel panel-default">

  <!-- Panel heading !-->
  <div class="panel-heading clearfix">
    <span data-toggle="collapse" data-target=".{{file}}">
      {{file}}
    </span>

    <div class="btn-group pull-right">
      <button type="button" class="btn btn-info dropdown-toggle btn-xs" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fa fa-cog fa-1x"></i>
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li>
          <a>
            <i class="fa fa-edit pull-left"></i>Edit
          </a>
        </li>
        <li role="separator" class="divider"></li>
        <li>
          <a class="btn-delete" id="{{file}}">
            <i class="fa fa-trash-o pull-left"></i>Delete
          </a>
        </li>
      </ul>
    </div>

  </div>

  <!-- Panel contents !-->
  <div class="panel-collapse collapse in {{file}}">
    <div class="panel-body">
      <div>
        <input class="btn-visibility" data-size="small" id="{{file}}" type="checkbox" checked data-toggle="toggle" data-on="Show" data-off="Hide">
      </div>

      <div id="sourcelist">
        <h5>Data within this collection:</h5>
        <ul>
          <li>Example item #1</li>
        </ul>

        <!-- Edit collection form !-->
        {{> sourceUpload}}

        <button type="button" class="btn btn-success btn-xs pull-right">
          <i class="fa fa-plus pull-left"></i>New source
        </button>
      </div>

    </div>
  </div>
</div>
