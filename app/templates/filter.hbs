<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading clearfix">
      <span class="accordion" data-toggle="collapse" data-target="#filter-body">
        <h4>Search</h4>
      </span>
    </div>

    <div class="panel-collapse collapse in" id="filter-body">
      <div class="panel-body">
        <div class="input-group">
          <span class="input-group-addon">Track name:</span>
          <input type="text" class="form-control" placeholder="Any" id="filter-name">
        </div>
        <br>
        <fieldset class="well ele-fieldset">
          <legend class="ele-legend">Elevation</legend>
          <div id="ele-slider"></div>
        </fieldset>
        <button type="button" class="btn btn-search btn-primary">
          <i class="fa fa-search pull-left"></i>Search
        </button>
      </div>
    </div>
  </div>
</div>
